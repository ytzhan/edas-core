<div class="row divider has-padding no-margin has-error relative" style="{{_hidden}} !important">
	<label class="cell-4">{{label}}</label>
	<input {{inputValue}} class="cell-6 no-border"
		type={{type}} name={{name}} placeholder={{tip}} style = "text-align:{{align}}" >
	<i class="cell-2 icon {{#if error.flag}}icon-times{{/if}} text-red justify-end  "></i>
	{{#if error.flag}}
		<div class="errorText">
		{{error.message}}
		</div>
	{{/if}}
</div>