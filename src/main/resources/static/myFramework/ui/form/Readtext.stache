<div class="row divider has-padding no-margin has-error relative">
	<label class="cell-4">{{label}}</label>
	<input {{readOnlyValue}} class="cell-6 no-border"
		type={{type}} name={{name}} placeholder={{tip}} style="text-align:{{align}}" readonly>
	<i class="cell-2 icon {{#if error.flag}}icon-times{{/if}} text-red justify-end  "></i>
	{{#if error.flag}}
		<div class="errorText">
		{{error.message}}
		</div>
	{{/if}}
</div>